source "https://rubygems.org"
ruby "2.3.0"

gem "pry"
gem "minitest-rg"
gem "rake"

# Interfaces w/ the Postgres database
gem "pg"

# Goes between models and postgres db
gem "activerecord"

# Web application base
gem 'sinatra'

# Some bonus AR stuff that is sinatra-specific
gem 'sinatra-activerecord'

# Lets us use some nice plugins
gem 'sinatra-contrib'


